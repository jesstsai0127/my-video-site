---
import BaseLayout from '../../../../layouts/BaseLayout.astro';

const title = "Harry Potter Story-Song Series – Book 1: The Sorcerer's Stone";
const description = "A musical retelling of Harry Potter Book 1 through original songs – one chapter at a time.";
---

<BaseLayout title={title} description={description}>

  <main class="max-w-screen-md mx-auto px-4 py-8 space-y-6">
    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="mb-4">{description}</p>

    <ul class="list-disc list-inside space-y-2">
      <li><a href="/songified-stories/harrypotter/book1/chapter1">Chapter 1: A Child at the Door | Harry Potter Book 1 Chapter 1: The Boy Who Lived</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter2">Chapter 2: Underneath the Stairs | Harry Potter Book 1 Chapter 2: The Vanishing Glass</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter3">Chapter 3: No One Writes to Me | Harry Potter Book 1 Chapter 3: The Letters from No One</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter4">Chapter 4: Knocking Down the Silence | Harry Potter Book 1 Chapter 4: The Keeper of the Keys Story Song</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter5">Chapter 5: Where Bricks Give Way | Harry Potter Book 1 Ch. 5: Diagon Alley Story Song</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter6">Chapter 6: Through the Wall | Harry Potter Book 1 Ch 6: Journey to Platform 9¾ Song</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter7">Chapter 7: Whispers in the Hat | Harry Potter Book 1 Ch 7: The Sorting Hat</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter8">Chapter 8: Eyes Like Shadows | Harry Potter Book 1 Ch 8: The Potions Master</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter9">Chapter 9: Shadows in the Hall | Harry Potter Book 1 Ch 9: The Midnight Duel</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter10">Chapter 10: Troll in the Shadows | Harry Potter Book 1 Ch 10: Hallowe’en</a></li>
      <li><a href="/songified-stories/harrypotter/book1/chapter11">Chapter 11: Sky and Flame | Harry Potter Book 1 Ch 11: Quidditch</a></li>

